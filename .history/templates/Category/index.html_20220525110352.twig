{% extends 'base.html.twig' %}

{% block body %}
    <h1>Toutes les catégories:
		</h1>
        {% for category in categories %}
			<div>
				<h2>{{ loop.index }}
					/
					{{ category.name }}
				</h2>
				<a href="{{ path('category_show', {{ categoryName: categoryName  }} ) }}">Voir les séries</a>
			</div>
		{% else %}
			Aucune catégorie trouvée.
			<a href="{{ path('app_index') }}">
				Retour à l'accueil
			</a>
		{% endfor %}
{% endblock %}