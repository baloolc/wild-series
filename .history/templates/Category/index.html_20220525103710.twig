{% extends 'base.html.twig' %}

{% block body %}
    <h1>Toutes les catégories:
		</h1>
        {% for program in ctegories %}
			<div>
				<h2>{{ loop.index }}
					/
					{{ program.title }}
					- Catégorie :
					{{ program.category.name }}</h2>
				<p>{{ program.synopsis }}</p>
				<a href="{{ path('program_show', { id: program.id }) }}">Voir la fiche</a>
			</div>
		{% else %}
			Aucune série trouvée.
			<a href="{{ path('app_index') }}">
				Retour à l'accueil
			</a>
		{% endfor %}
{% endblock %}